/* class.wxss */
.proList{clear:both;padding:20rpx 16rpx 15rpx;}
.proCon{float:left;width:350rpx;height:500rpx;background:#fff;overflow:hidden;margin-bottom:20rpx;}
.proCon:nth-child(even) {float: right;}
.proImgCon{width:350rpx;height:350rpx;margin-bottom:10rpx;overflow:hidden;}
.proImg{width:350rpx;height:350rpx;}
.proList .proCon image{width:100%;height:350rpx;border-top-left-radius:10rpx;border-top-right-radius:10rpx;}
.til{height:72rpx;font-size:28rpx;color:#333;line-height:36rpx;padding:0 20rpx;display:inline-block;overflow: hidden;text-overflow: ellipsis;display: -webkit-box;-webkit-line-clamp: 2;-webkit-box-orient: vertical;}
.til a{color:#333;text-decoration:none;}
.price{color:#ff3b3b;font-size:24rpx;padding:0 20rpx;}
.allprice{font-size:34rpx;display:inline-block;}
.more{clear:both;height:60rpx;text-align:center;font-size:30rpx;color:#ddd;}
.more view{width:348rpx;height:20rpx;border-bottom:1rpx solid #ddd;margin:0 auto;}
.more text{width:190rpx;height:40rpx;text-align:center;background:#f8f8f8;display:block;margin:0 auto;}