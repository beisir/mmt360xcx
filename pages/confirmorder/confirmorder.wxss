/* pages/confirmorder/confirmorder.wxss */
.container{padding-bottom:110rpx;}
 .addressBox{height:140rpx;font-size:26rpx;line-height:45rpx;color:#333;padding:25rpx 0;border-top:1rpx solid #f8f8f8;background:#fff url(https://style.org.hc360.com/images/microMall/program/line1.png) repeat-x -20rpx bottom;background-size:402rpx 6rpx;position:relative;} 
.addressBox::after{width:20rpx;height:30rpx;background:url(https://style.org.hc360.com/images/microMall/program/aIcon1.png) no-repeat 0 -70rpx;background-size:200rpx 500rpx;display:block; position:absolute;right:25rpx;top:75rpx;content: "";}
.consignee{padding:0 80rpx 0 80rpx;}
.addressCon{clear:both;padding:0 80rpx 0 80rpx;position:relative;}
.addressCon::before{width:45rpx;height:45rpx;background:url(https://style.org.hc360.com/images/microMall/program/aIcon1.png) repeat-x 0 -405rpx;background-size:200rpx 500rpx;display:block;position:absolute;left:25rpx;top:0;content:"";}
.noaddress{text-align:center;padding:47rpx 0 0;}

.proBox{clear:both;margin-top:20rpx;background:#fff;padding:0 25rpx;overflow:hidden;}
.proCon{clear:both;border-bottom:1rpx solid #ddd;overflow:hidden;}
.proImgCon{float:left;margin:20rpx 0;width:160rpx;height:160rpx;overflow:hidden;}
.proImg{width:160rpx;height:160rpx;}
.proRtxt{float:right;width:520rpx;height:160rpx;padding:20rpx 0 10rpx;position:relative;}
.proTitle{height:76rpx;font-size:24rpx;color:#333;line-height:38rpx;display:inline-block;overflow: hidden;text-overflow: ellipsis;display: -webkit-box;-webkit-line-clamp: 2;-webkit-box-orient: vertical;}
.proTitle a{color:#333;text-decoration:none;}
.proColour{color:#999;font-size:24rpx;opacity: 0;}
.prorPrice{color:#ff3b3b;font-size:24rpx;}
.price{font-size:30rpx;}
.total{clear:both;height:80rpx;line-height:80rpx;text-align:right;font-size:24rpx;color:#333;background:#fff;padding:0 25rpx;}
.proNom{margin-right:15rpx;display:inline-block;}
.priceBox{font-size:24rpx;color:#333;display:inline-block;}
.priceCon{color:#ff3b3b;display:inline-block;}
.price{font-size:30rpx;display:inline-block;}


/* 数量 */
.amountBox{position:absolute;right:25rpx;bottom:20rpx;width:175rpx;height:48rpx;display:flex;}
.number{width:79rpx;height:46rpx;border:1rpx solid #ddd;}
.numInput{height:42rpx;line-height:42rpx;font-size:24rpx;color:#333;text-align:center;margin-top:-4rpx;overflow:hidden;}
.amountDown{width:46rpx;height:46rpx;border:1px solid #ddd;border-right:0;border-top-left-radius:2rpx;border-bottom-left-radius:2rpx;background:url(https://style.org.hc360.com/images/microMall/program/aIcon1.png) no-repeat -165rpx -58rpx;background-size:200rpx 500rpx;display:block;}
.amountReduce{width:46rpx;height:46rpx;border:1rpx solid #ddd;border-right:0;border-top-left-radius:2rpx;border-bottom-left-radius:2rpx;background:url(https://style.org.hc360.com/images/microMall/program/aIcon1.png) no-repeat -165rpx -138rpx;background-size:200rpx 500rpx;display:block;}
.amountUp{width:46rpx;height:46rpx;border:1rpx solid #ddd;border-left:0;border-top-right-radius:2rpx;border-bottom-right-radius:2rpx;background:url(https://style.org.hc360.com/images/microMall/program/aIcon1.png) no-repeat -165rpx 10rpx;background-size:200rpx 500rpx;display:block;}
.amountBox a{width:46rpx;height:46rpx;display:block;}

.totalPriceBox{position:fixed;left:0;bottom:0;width:100%;height:98rpx;background:#fff;}
.botTotal{float:left;width:68%;height:98rpx;line-height:98rpx;font-size:30rpx;color:#333;padding-right:3%;text-align:right;display:block;}
.allprice{font-size:24rpx;color:#ff3b3b;display:inline-block;}
.conOlder{float:right;width:29%;height:98rpx;line-height:98rpx;font-size:30rpx;color:#fff;background:#ff3b3b;text-align:center;display:block;}

.allNom{position:absolute;right:25rpx;bottom:20rpx;font-size:24rpx;color:#333;text-align:right;}