.proRtxt{float:right;width:520rpx;height:160rpx;padding:20rpx 0 10rpx;position:relative;}
.proTitle{height:76rpx;font-size:24rpx;color:#333;line-height:38rpx;display:inline-block;overflow: hidden;text-overflow: ellipsis;display: -webkit-box;-webkit-line-clamp: 2;-webkit-box-orient: vertical;}
.proTitle a{color:#333;text-decoration:none;}
.proColour{color:#999;font-size:24rpx;}
.prorPrice{color:#ff3b3b;font-size:24rpx;}
