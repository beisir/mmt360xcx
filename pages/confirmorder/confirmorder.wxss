.addressBox{height:60rpx;font-size:26rpx;color:#333;padding:65rpx 0;border-top:1rpx solid #f8f8f8;background:#fff url(https://style.org.hc360.com/images/microMall/program/line1.png) repeat-x left bottom;background-size:402rpx 6rpx;text-align:center;}
.addressBox::after{width:20rpx;height:30rpx;background:url(https://style.org.hc360.com/images/microMall/program/aIcon1.png) no-repeat 0 -70rpx;background-size:200rpx 500rpx;display:block; position:absolute;right:25rpx;top:70rpx;content: "";}

.proBox{clear:both;margin-top:20rpx;background:#fff;padding:0 25rpx;overflow:hidden;}
