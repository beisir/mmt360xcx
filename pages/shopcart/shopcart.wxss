/* shopcart.wxss */
.container {height:100%;}

.operation{height:90rpx;line-height:90rpx;font-size:30rpx;color:#333;text-align:right;background:#f8f8f8;padding:0 25rpx;}
.operation a{color:#333;text-decoration:none;}

.orderBox{clear:both;background:#fff;overflow:hidden;}
.orderCon{clear:both;}
.choice,.seleCur{float:left;width:40rpx;margin:75rpx 20rpx 0 25rpx;}
.choiceInput,.seleInput{width:40rpx;height:40rpx;display:inline-block;}
.choiceInput{background:url(https://style.org.hc360.com/images/microMall/program/aIcon2.png) no-repeat -79rpx 0;background-size:200rpx 500rpx;}
.seleInput{background:url(https://style.org.hc360.com/images/microMall/program/aIcon2.png) no-repeat 0 0;background-size:200rpx 500rpx;}
.orderImgCon{float:left;margin:20rpx 0;width:160rpx;height:160rpx;overflow:hidden;}
.orderImg{width:160rpx;height:160rpx;}
.orderRtxt{float:left;width:450rpx;height:160rpx;border-top:1rpx solid #ddd;margin-left:20rpx;padding:20rpx 25rpx 20rpx 10rpx;position:relative;margin-top:-1rpx;}
.orderTitle{height:76rpx;font-size:24rpx;color:#333;line-height:38rpx;display:inline-block;overflow: hidden;text-overflow: ellipsis;display: -webkit-box;-webkit-line-clamp: 2;-webkit-box-orient: vertical;}
.orderTitle a{color:#333;text-decoration:none;}
.proColour{color:#999;font-size:24rpx;}
.orderPrice{color:#ff3b3b;font-size:24rpx;}
.price{font-size:30rpx;}
.allNom{position:absolute;right:25rpx;bottom:20rpx;font-size:24rpx;color:#333;text-align:right;}
.delregion{float:left;width:160rpx;height:202rpx;line-height:202rpx;font-size:30rpx;background:#ff3b3b;color:#fff;text-align:center;}
.delregion a{width:160rpx;height:202rpx;display:block;color:#fff;}
.delpad{margin-left:-160rpx;}



/* 数量 */
.amountBox{position:absolute;right:25rpx;bottom:20rpx;width:175rpx;height:48rpx;display:flex;}
.number{width:79rpx;height:46rpx;border:1rpx solid #ddd;}
.numInput{height:42rpx;line-height:42rpx;font-size:24rpx;color:#333;text-align:center;margin-top:-4rpx;overflow:hidden;}
.amountDown{width:46rpx;height:46rpx;border:1px solid #ddd;border-right:0;border-top-left-radius:2rpx;border-bottom-left-radius:2rpx;background:url(https://style.org.hc360.com/images/microMall/program/aIcon2.png) no-repeat -165rpx -58rpx;background-size:200rpx 500rpx;display:block;}
.amountReduce{width:46rpx;height:46rpx;border:1px solid #ddd;border-right:0;border-top-left-radius:2rpx;border-bottom-left-radius:2rpx;background:url(https://style.org.hc360.com/images/microMall/program/aIcon2.png) no-repeat -165rpx -138rpx;background-size:200rpx 500rpx;display:block;}
.amountUp{width:46rpx;height:46rpx;border:1px solid #ddd;border-left:0;border-top-right-radius:2rpx;border-bottom-right-radius:2rpx;background:url(https://style.org.hc360.com/images/microMall/program/aIcon2.png) no-repeat -165rpx 10rpx;background-size:200rpx 500rpx;display:block;}
.amountBox a{width:46rpx;height:46rpx;display:block;}



/* 空购物车 */
.noOrder{position:fixed;height:100%;width:100%;color:#ccc;font-size:30rpx;display:flex;flex-direction:column;align-items:center;/*垂直居中*/justify-content: center;/*水平居中*/}

/* 底部合计 */
.allOrder{position:fixed;left:0;bottom:0;width:100%;height:98rpx;background:#fff;}
.choice_2,.seleCur_2{float:left;width:22%;line-height:98rpx;font-size:30rpx;color:#333;margin:0 0 0 25rpx;}
.choice_2_input,.seleCur_2_input{width:40rpx;height:40rpx;display:inline-block;margin:-3rpx 10rpx 0 0; vertical-align: middle;}
.choice_2_input{background:url(https://style.org.hc360.com/images/microMall/program/aIcon2.png) no-repeat -79rpx 0;background-size:200rpx 500rpx;}
.seleCur_2_input{background:url(https://style.org.hc360.com/images/microMall/program/aIcon2.png) no-repeat 0 0;background-size:200rpx 500rpx;}
.total{float:left;width:43%;line-height:98rpx;font-size:30rpx;color:#333;padding-right:25rpx;text-align:right;}
.allprice_1{font-size:24rpx;color:#ff3b3b;display:inline-block;}
.total_2{float:left;width:43%;padding-right:25rpx;text-align:right;font-size:24rpx;color:#ff3b3b;}
.priceCon_2{height:50rpx;line-height:50rpx;font-size:30rpx;color:#333;display:block;}
.allprice_2{font-size:24rpx;color:#ff3b3b;padding:10rpx 0 0;display:inline-block;}
.allprice{font-size:30rpx;display:inline-block;}
.freight{font-size:22rpx;color:#999;}
.buyBtn{float:right;width:28%;height:98rpx;line-height:98rpx;font-size:30rpx;color:#fff;text-align:center;background:#ddd;}
.buyBtn a{width:100%;height:98rpx;color:#fff;text-decoration:none;display:block;}
.buyBtnClick{background:#ff3b3b;}